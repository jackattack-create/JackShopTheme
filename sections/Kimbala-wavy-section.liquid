                    "id": "button_link",
                    "label": "Button Url"
                }
            ]
       
        },
        {
            "type": "copy",
            "name": "Body Copy",
            "settings": [
                {
                    
                        "type": "richtext",
                        "id": "wavy_content_richtext",
                        "label": "Body"
                    
                },
                {
            
                    "type": "select",
                    "id": "text_align",
                    "label": "Text Alignment",
                    "options": [
                        {
                            "value": "left",
                            "label": "Left"
                        },
                        {
                            "value": "center",
                            "label": "Center"
                        }
                    ]
                
                }
            ]
        },
        {
            "type": "description",
            "name": "Image and Text",
            "settings": [
            {
               
                    "type": "text",
                    "id": "wavy_title",
                    "label": "Title"
            },
                    {
                        "type": "image_picker",
                        "id": "side_img",
                        "label": "Side Image"
                    },
                    {
                        "type": "text",
                        "id": "description",
                        "label": "description"
                    },
                    {
            
                        "type": "select",
                        "id": "text_align",
                        "label": "Text Alignment",
                        "options": [
                            {
                                "value": "left",
                                "label": "Left"
                            },
                            {
                                "value": "center",
                                "label": "Center"
                            }
                        ]
                    
                    }
                ]
            },
            {
            "type": "productLink",
            "name": "Product Highlight",
            "settings": [
                    {
                        "type": "text",
                        "id": "wavy_title",
                        "label": "Title"
                    },
                    {
                        "type": "product",

{{ 'Kimbala-wavy-section.css' | asset_url | stylesheet_tag }}
{{ 'Kimbala-universal-assets.css' | asset_url | stylesheet_tag }}


       
<div class="wavySection">
    {%- if section.settings.outward -%} 
        <div>
            <svg class="wavyWave"style="display:block;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1920 126.25"><g id="Layer_2" data-name="Layer 2"><g id="Layer_1-2" data-name="Layer 1"><path style="fill: {{section.settings.wavySectionColor}};" class="cls-1" d="M1920,60.12v66.13H0V60.12s510.38,131.8,968.14,0C1438-75.16,1920,60.12,1920,60.12Z"/></g></g></svg>
        </div>
   {%- endif -%}
  
    <div class="wavyBody" style="background-color: {{section.settings.wavySectionColor}};">
        {%- for block in section.blocks -%}
            {%- case block.type -%}

                {%- when 'header' -%}
                    <h2 class="title">{{block.settings.section_title}}</h2>
                    
                
                {%- when 'description' -%}
                <div class="fullWavyImgTextPair">
                    <img src={{block.settings.side_img | img_url: 'large'}} style="width: 50%; height: 100%;">
                    <div class="img-textBlock">
                        <h2>{{block.settings.wavy_title}}</h2>
                        <p>{{block.settings.description}}</p>
                    </div>
                </div>
                {%- when 'productLink' -%}
                    <h2>{{ block.settings.wavy_title }}</h2>
                    <div class="WavyImgTextPair">
                        <img src={{block.settings.product.images[0].src | img_url: 'large'}}>
                        <div class="img-textBlock">
                            <h2>{{block.settings.product.title}}</h2>
                            <button class="kimbalaButton">
                               <a href="{{block.settings.product.url}}">Buy it now</a> 
                            </button>
                        </div>
                        
                    </div>
                {%- when 'blog' -%}
                <div class="wavy-blog-container"> 
                    {%- for article in block.settings.wavy_blog.articles -%}
                    
                        <div class="wavy-blog">
                            <img src="{{article.image.src | img_url: 'medium'}}" />
                            <h3>{{article.title}}</h3>
                            <p>{{article.excerpt | truncate: 180}}</p>
                        </div>
                    
                    {%- endfor -%}
                </div>
                
                
                
                    
                
            {%- endcase -%}
        {%- endfor -%}
    </div>

    <svg class="wavyWave"style="display:block;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1920 148.18"><defs></defs><g id="Layer_2" data-name="Layer 2"><g id="Layer_1-2" data-name="Layer 1"><path  class="cls-1" d="M1920,0V96.32s-510.38-113.69-968.14,0C482,213,0,96.32,0,96.32V0Z"/></g></g></svg>

</div>



{% schema %}
{
    "name": "Wavy Section",
    "presets": [{
            "name": "Wavy Section"
        }],
    "blocks": [
    {
        
            "type": "header",
            "name": "title",
            "settings": [
                {
                    "type": "text",
                    "id": "section_title",
                    "label": "Title",
                    "default": "Title"
                }
            ]
       
    },
        {
            "type": "description",
            "name": "Image and Text",
            "settings": [
                    {
                        "type": "image_picker",
                        "id": "side_img",
                        "label": "Side Image"
                    },
                    {
                                
                        "type": "richtext",
                        "id": "wavy_title",
                        "label": "Title"
                                    
                    },
                    {
                        "type": "richtext",
                        "id": "description",
                        "label": "description"
                    }
                ]
            },
            {
            "type": "productLink",
            "name": "Product Highlight",
            "settings": [
                    {
                        "type": "richtext",
                        "id": "wavy_title",
                        "label": "Title"
                    },
                    {
                        "type": "product",
                        "id": "product",
                        "label": "Featured Product"

                    }
                    
                ]
            },
            {
                "type": "blog",
                "name": "Blog",
                "settings": [
                    {
                        "type": "blog",
                        "id": "wavy_blog",
                        "label": "Blog"
                    }
                ]
                
            },
        ],
    "settings": [{
                "type": "color",
                "id": "wavySectionColor",
                "label": "Color",
                "default": "#ffcccc"
        },
        {
            
                "type": "checkbox",
                "id": "outward",
                "label": "Wave Outward",
                "default": true
            
        },
        {
            
            "type": "checkbox",
            "id": "bottomWave",
            "label": "Bottom Wave",
            "default": false
        
    }
        ]
}
{% endschema %}
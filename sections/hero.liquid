
{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="hero-container" style="background-image: url({{section.settings.image_bg | img_url: 'Medium' }});">
  {%- for block in section.blocks -%}
  {%- case block.type -%}
  {%- when 'heading' -%}
        <div class="hero-text-container">
      <h4>
        {{block.settings.rich_text}}
      </h4>
      <h1>
        {{block.settings.big_text}}
      </h1>
    </div>
      
      {%- when 'text' -%}
              <div style="width:100%; flex-direction: row; justify-content: start;">
  
                <div style="width: 50%; text-align: start; padding-left: 30px;">
                <h2 style="color: {{block.settings.hero_side_text_color_id}}"><b><i>{{block.settings.hero_img_header}}</i></b></h2>
                  <p style="color: {{block.settings.hero_side_text_color_id}}">
                    {{block.settings.hero_img_text}}
                  </p>
                </div>
              </div>
          {%- endcase -%} 
      {%- endfor -%}   
</div>

{% schema %} 
{ 
    "name": "Hero", 
    "settings": [
      {
          "type": "image_picker",
          "id": "image_bg",
          "label": "Background Image"
      }
      ],
      "presets": [ 
      { "name": "Hero" } 
      ],
      "blocks": [
      {
        "type": "heading",
        "name": "Heading",
        "settings": [
                        {
                              "type": "text",
                              "id": "rich_text",
                              "label":"Top Text"
                        },
                        {
                          "type": "text",
                          "id": "big_text",
                          "label":"Big Text"
                        },
                        {
                      
                            "type": "color",
                            "id": "hero_side_text_color_id",
                            "label": "Text Color",
                            "default": "#333"
                          
                        }
      
      ]
    },
      {
        "type": "text",
        "name": "Sided Text",
        "settings": [
          {
            
              "type": "checkbox",
              "id": "rightText",
              "label": "Right sided text",
              "default": false
            
          },
          {
            
            "type": "text",
            "id": "hero_img_header",
            "label": "Header"
          
        },
          {
            
              "type": "text",
              "id": "hero_img_text",
              "label": "Text"
            
          }
        ]
      }
    ] 
    
} 
{% endschema %}
